{
  "name": "tailwind-demo",
  "version": "1.0.0",
  "description": "Demo of how Tailwind works used for my talk at the Port Macquarie Wordpress Meetup",
  "main": "index.js",
  "scripts": {
    "init": "rm -rf tailwind.config.js && npx tailwind init --full",
    "build": "npx tailwind build tailwind.css -o styles.css",
    "purgecss": "postcss styles.css -o styles.css",
    "start": "npm run init && npm run build && npm run purgecss"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.1.2"
  }
}
